<div class="ui placholder segment">
  <div class="ui">
    <div class= "column">

      <%= form_for(User.new, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
        <div class="field">
          <%= f.label :username, 'Username' %>
           <div class="ui left icon input">
          <%= f.text_field :username, placholder: 'Username' %>
           <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, 'Password' %>
             <div class="ui left icon input">
            <%= f.text_field :password, placholder: 'Password' %>
             <i class="lock icon"></i>
              </div>
            </div>
            <%= f.submit "Sign Up", class: "ui red submit button" %>
      <% end %>
      </div>
  </div>
</div>
